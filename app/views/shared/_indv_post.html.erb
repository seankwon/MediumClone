<% @posts.each do |n| %>
  <h1><a class="header_link" href="/post/<%= n.id %>"><%= n.header %></a></h1>
  <% if defined?(@editing) && @editing %>
    <li class="edit-link"><a href=<%= edit_post_path(n.id) %>>edit</a></li>
  <% end %>
  <hr>
  <p><%= simple_format(n.content.truncate(400).html_safe) %></p>
<% end %>
